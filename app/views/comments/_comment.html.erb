<div class="media">
  <% if comment.user.avatar? %>
    <div class="pull-left" href="#">
      <%= image_tag(comment.user.avatar.small.url) %>
    </div>
  <% end %>
  <div class="media-body">
    <%= comment.body %>
    <small>
      <p>
        submitted <%= time_ago_in_words(comment.created_at) %> ago by 
        <%= comment.user.name %>
        <% if policy(comment).destroy? %>
          | <%= link_to "Delete", [@topic, @post, comment], method: :delete, data: { confirm: 'Are you sure you want to delete this comment?'} %>
        <% end %>
      </p>
    </small>
  </div>
</div>
