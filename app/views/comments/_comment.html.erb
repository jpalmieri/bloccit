<div class="media">
  <% if comment.user.avatar? %>
    <div class="pull-left" href="#">
      <%= image_tag(comment.user.avatar.small.url) %>
    </div>
  <% end %>
  <div class="media-body">
    <%= comment.body %>
    <small>
      <p>submitted <%= time_ago_in_words(comment.created_at) %> ago by 
      <%= comment.user.name %></p>
    </small>
  </div>
</div>
